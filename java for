private ReceiptDetailInput.ReceiptDetailInputBuilder base(AccountingInput in, String contractNo) {
    return ReceiptDetailInput.builder()
            .account(String.valueOf(in.getSenderAccountNo()))
            .contractNo(contractNo)
            .processCode(PROCESS_CODE);
}

List<ReceiptDetailInput> details = List.of(
    base(in, cn).fieldOrder(514).value(in.getSenderName()).build(),
    base(in, cn).fieldOrder(610).numericValue(in.getSenderAccountNo().longValue()).build(),
    base(in, cn).fieldOrder(527).numericValue(in.getSenderBranchCode().longValue()).build()
);

public final class Fields {
    public static final int SENDER_NAME = 514;
    public static final int SENDER_ACC  = 610;
    public static final int SENDER_BRCH = 527;
}